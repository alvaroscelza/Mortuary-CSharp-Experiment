@model IEnumerable<mortuary.Models.ClientBill>

@{
    ViewBag.Title = mortuary.i18n.i18n.ClientBills;
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink(mortuary.i18n.i18n.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalToPay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.Client.Name)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.TotalToPay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.ActionLink(mortuary.i18n.i18n.Edit, "Edit", new { id = item.Id }) |
                @Html.ActionLink(mortuary.i18n.i18n.Details, "Details", new { id = item.Id }) |
                @Html.ActionLink(mortuary.i18n.i18n.Delete, "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
