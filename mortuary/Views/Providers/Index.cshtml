@model IEnumerable<mortuary.Models.Provider>

@{
    ViewBag.Title = mortuary.i18n.i18n.Providers;
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink(mortuary.i18n.i18n.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BankAccountInformation)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BankAccountInformation)
        </td>
        <td>
            @Html.ActionLink(mortuary.i18n.i18n.Edit, "Edit", new { id=item.Id }) |
            @Html.ActionLink(mortuary.i18n.i18n.Details, "Details", new { id=item.Id }) |
            @Html.ActionLink(mortuary.i18n.i18n.Delete, "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
