    ViewBag.Title = mortuary.i18n.i18n.Delete;
}

<h2>@mortuary.i18n.i18n.Delete</h2>

<h3>@mortuary.i18n.i18n.ConfirmDelete</h3>
<div>
    <h4>BillLine</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Product)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product.Name)
        </dd>

        <dt>
