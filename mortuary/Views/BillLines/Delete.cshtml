        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TaxesPercentage)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TaxesPercentage)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Subtotal)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subtotal)
        </dd>

    </dl>

    @using (Html.BeginForm())
