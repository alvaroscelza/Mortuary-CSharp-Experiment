        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value=@mortuary.i18n.i18n.Delete class="btn btn-secondary" /> | <a href=@ViewBag.PreviousURL>@mortuary.i18n.i18n.Back</a>
        </div>
    }
